<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="com.turboclone.demovpn.activity.MainActivity">

    <RelativeLayout
        android:background="#381C00"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:id="@+id/wahwah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="-23dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_connect_message"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_tip_msg_connected"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="Now you can unblock     Facebook,Youtube etc."
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView

                android:id="@+id/image_gif"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="bottom|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ess1"
            android:layout_below="@id/wahwah"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/connection_state"
                style="@style/StateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="@string/disconnected"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="24sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/connect_btn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/connection_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="230dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:progressDrawable="@drawable/progress"
                android:visibility="gone"
                tools:visibility="visible" />




            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adViewmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/Admob_banner_id"/>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>

